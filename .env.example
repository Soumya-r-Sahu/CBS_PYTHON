# Core Banking System Environment Variables Example
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit your actual .env file to version control

# ======================================================================
# ENVIRONMENT SETTINGS
# ======================================================================
# Environment (development, test, production)
CBS_ENVIRONMENT=development
CBS_DEBUG=true  # Set to false in production

# ======================================================================
# DATABASE SETTINGS
# ======================================================================
# Main database connection
CBS_DB_HOST=localhost
CBS_DB_PORT=3307
CBS_DB_NAME=CBS_PYTHON
CBS_DB_USER=root
CBS_DB_PASSWORD=your_password_here
CBS_DB_POOL_SIZE=5
CBS_DB_MAX_OVERFLOW=10
CBS_DB_TIMEOUT=30

# Alternative database URL format (optional)
# CBS_DATABASE_URL=mysql+mysqlconnector://user:password@localhost:3307/database_name

# ======================================================================
# SECURITY SETTINGS
# ======================================================================
# General security
CBS_SECRET_KEY=your_secure_secret_key_here  # Use a long random string

# JWT Authentication
CBS_JWT_SECRET_KEY=your_secure_jwt_secret_key_here  # Use a different random string
CBS_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
CBS_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password policy
CBS_PASSWORD_MIN_LENGTH=10
CBS_PASSWORD_MIN_UPPERCASE=1
CBS_PASSWORD_MIN_LOWERCASE=1
CBS_PASSWORD_MIN_DIGITS=1
CBS_PASSWORD_MIN_SPECIAL=1
CBS_PASSWORD_SPECIAL_CHARS=!@#$%^&*()-_=+[]{}|;:,.<>?/
CBS_PASSWORD_HISTORY_SIZE=5
CBS_PASSWORD_MAX_AGE_DAYS=90
CBS_PASSWORD_LOCKOUT_THRESHOLD=5
CBS_PASSWORD_LOCKOUT_DURATION=30

# MFA settings
CBS_MFA_ENABLED=true
CBS_MFA_TOTP_ISSUER=CoreBankingSystem
CBS_MFA_TOTP_DIGITS=6
CBS_MFA_TOTP_INTERVAL=30
CBS_MFA_BACKUP_CODES_COUNT=10

# Rate limiting
CBS_RATE_DEFAULT_LIMITS=100 per hour,5 per minute
CBS_RATE_LOGIN_LIMITS=5 per minute,20 per hour
CBS_RATE_SENSITIVE_API_LIMITS=3 per minute,10 per hour
CBS_RATE_STORAGE=memory://

# ======================================================================
# EMAIL SETTINGS
# ======================================================================
CBS_EMAIL_HOST=smtp.example.com
CBS_EMAIL_PORT=587
CBS_EMAIL_USER=your_email@example.com
CBS_EMAIL_PASSWORD=your_email_password_here
CBS_EMAIL_USE_TLS=true
CBS_EMAIL_USE_SSL=false
CBS_EMAIL_DEFAULT_SENDER=Core Banking System <noreply@example.com>

# ======================================================================
# UPI SETTINGS
# ======================================================================
CBS_UPI_PROVIDER=your_upi_provider_here
CBS_UPI_API_KEY=your_upi_api_key_here
CBS_UPI_API_URL=https://api.upi.example.com/v1/
CBS_UPI_TIMEOUT=30
CBS_UPI_VERIFY_SSL=true

# ======================================================================
# ATM SETTINGS
# ======================================================================
CBS_ATM_MAX_WITHDRAWAL=10000
CBS_ATM_PIN_ATTEMPTS=3
CBS_ATM_SESSION_TIMEOUT=120

# ======================================================================
# LOGGING SETTINGS
# ======================================================================
CBS_LOG_LEVEL=DEBUG  # Use INFO in production
CBS_LOG_FILE=logs/cbs.log
CBS_AUDIT_LOG_FILE=logs/security_audit.log
CBS_AUDIT_LOG_LEVEL=INFO

# ======================================================================
# SERVICE URLS
# ======================================================================
CBS_API_GATEWAY_URL=http://localhost:8000
CBS_ADMIN_PANEL_URL=http://localhost:8080
CBS_MOBILE_API_URL=http://localhost:8001
